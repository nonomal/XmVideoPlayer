{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["./src/components/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/stores/*": ["./src/stores/*"],
      "@/libs/*": ["./src/libs/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/internal/*": ["src/internal/*"],
      "@/assets/*": ["./src/assets/*"],
      "@package": ["./package.json"],
      "@project": ["./project.config.json"],

      "@/splashscreen/*": ["./slaves/splashscreen/*"]
    }
  },
  "include": [
    "*.d.ts",
    "typings/**/*.d.ts",

    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/libs/heart.js",

    "slaves/splashscreen/**/*.ts",
    "slaves/splashscreen/**/*.d.ts",
    "slaves/splashscreen/**/*.tsx",
    "slaves/splashscreen/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
